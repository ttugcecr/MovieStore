@model Product

<div class="card mb-2">
    <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url" >  <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="" width="225" height="225"></a>
  
    <div class="card-body">
        <h5 class="card_title">@Model.Name</h5>
         <small class="text-muted">
              <i class="fas fa-lira-sign"></i> @Model.Price  (â‚º)
         </small>
            
          
     </div>
     <div class="card-footer text-center">
         <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">Details</a>
         @if (User.Identity.IsAuthenticated)
         {
             <form asp-controller="Cart" asp-action="AddToCart" style="display:inline;" method="post">
                 <input type="hidden" name="productId" value="@Model.ProductId" />
                 <input type="hidden" name="quantity" value="1" />
                 <button type="submit" class="btn btn-primary btn-sm" >Add to Cart</button>
             </form>
         }
         @*<a asp-controller="shop" asp-action="addtocard" asp-route-id="@Model.ProductId" class="btn btn-primary btn-sm">Add to Cart</a>*@
     </div>
 </div>