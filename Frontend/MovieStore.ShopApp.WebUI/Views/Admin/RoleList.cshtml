@model IEnumerable<AppRole>

@{
    ViewData["Title"] = "RoleList";
    int count = 0;
}

<h1 class="h3">Roller Listesi</h1>
<br />
<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Role List</h1>
        <hr>
        <a href="/Admin/RoleCreate/" class="btn btn-primary btn-sm">Add Role</a>
        <hr>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Role Name</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Update</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Name</td>
                            <td>
                                <a href="/Admin/RoleDelete/@item.Id" class="btn btn-danger btn-sm" style="display:inline;" id="DeleteBtn"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                    <i class="fas fa-trash">
                                    </i> Delete
                                 </a>
                            </td>                            
                            <td>
                                <a href="/Admin/RoleEdit/@item.Id" class="btn btn-primary btn-sm mr-2">
                                    <i class="fas fa-pencil-alt">
                                    </i> Update
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Roles</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

