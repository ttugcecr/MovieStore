
@model ProductModel

@{
    ViewData["Title"] = "ProductCreate";
}

<h1 class="h3">Film Ekleme Paneli</h1>
<hr>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="ProductCreate" method="POST" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea id="editor" class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ProductPicture" class="col-sm-2 col-form-label"></label>
                <div class="custom-file col-sm-10">
                    <input asp-for="ProductPicture" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                    @* <input class="form-control" asp-for="ProductPicture"> *@
                    <span asp-validation-for="ProductPicture" class="text-danger"></span>
                </div>
            </div>
            @*<div class="form-group row">
            <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
            <input class="form-control" asp-for="ImageUrl">
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            </div>*@
            @*<div class="form-group row">
            <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
            <input class="form-control" asp-for="CategoryId">
            <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            </div>*@
            <div class="form-group row" row>
                <label class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.categories,new {@class="form-control"})
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-10 offset-sm-2 custom-control custom-checkbox">
                <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
                <label asp-for="IsApproved" class="custom-control-label"></label>
            </div>
            <div class="col-sm-10 offset-sm-2 custom-control custom-checkbox">
                <input asp-for="IsHome" type="checkbox" class="custom-control-input">
                <label asp-for="IsHome" class="custom-control-label"></label>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" value="" class="btn btn-primary">Ekle</button>
                </div>
            </div>

        </form>
    </div>
</div>
@section Scripts
    {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor')
    </script>
        scripts{
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
}