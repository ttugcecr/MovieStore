@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "UserList";
}

<h1>UserList</h1>

@section Css
    {
    @* https://datatables.net/examples/styling/bootstrap4.html bu lınten ve bu sıteden Css ve Scripts alıp asagıya eklıyoruzkı sayfalama yapsın yaptıgı zmaan verıtaba verıler cekıldıkten sonra sayfalama yapıyor*@

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css">
}

@section Scripts
    {
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}


<div class="row">
    <div class="col-md-12">
        <h1 class="h3">User List</h1>
        <hr>
        <a href="/admin/user/create" class="btn btn-primary btn-sm">Create User</a>
        <hr>
        <table id="myTable" class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td>FirstName</td>
                    <td>LastName</td>
                    <td>UserName</td>
                    <td>Email</td>
                    <td>EmailConfirmed</td>
                    <td style="width:160px;">İşlemler</td>

                </tr>

            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.EmailConfirmed?"":"bg-warning")">
                            <td>@item.FirtName</td>
                            <td>@item.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.EmailConfirmed</td>


                            <td>
                                <a href="/Admin/UserEdit/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form action="/Admin/UserEdit/delete" method="POST" style="display:inline;">
                                    <input type="hidden" name="UserId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>

                                </form>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Users</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

