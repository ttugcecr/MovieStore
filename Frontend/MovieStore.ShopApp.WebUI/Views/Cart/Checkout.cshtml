@model OrderModel
@{
    ViewData["Title"] = "Checkout";
}



<h1>Ödemeyi Tamamla</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Sipariş Detayı</h4>
        <form method="POST" asp-controller="Cart" asp-action="Checkout">
            <input type="hidden" name="cartId" value="0" />
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Ad</label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label>Soyad</label>
                    <input asp-for="@Model.LastName" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label>Adres</label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>

            <div class="row mb-3">

                <div class="col-md-4">
                    <label >Şehir</label>
                    <input asp-for="@Model.City" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label >Gsm</label>
                    <input asp-for="@Model.Phone" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label >Mail Adresi</label>
                    <input asp-for="@Model.Email" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label>Not</label>
                <textarea asp-for="@Model.Note" class="form-control"></textarea>
            </div>
            <h4 class="mb-3">Ödeme Bilgileri</h4>
            <hr class="mb-3" />
            <div class="row mb-3">

                <div class="col-md-6">
                    <label>Ad Soyad</label>
                    <input asp-for="@Model.CardName" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label>Kart Numarası</label>
                    <input asp-for="@Model.CardNumber" class="form-control" />
                </div>


            </div>
            <div class="row mb-3">

                <div class="col-md-4">
                    <label>Ay</label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label >Yıl</label>
                    <input asp-for="@Model.ExpirationYear" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label>Cvv</label>
                    <input asp-for="@Model.Cvc" class="form-control" />
                </div>
            </div>
            <hr class="mb-3">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Gönder</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3"><span>Özet Bilgiler</span></h4>


        <ul class="list-group mb-3">
            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Name</h6>

                    </div>
                    <span class="text-muted">@item.Price.ToString("c")</span>
                </li>
            }



            <li class="list-group-item d-flex justify-content-between">
                <span>Toplam (TL)</span>
                <strong>@Model.CartModel.TotalPrice().ToString("c")</strong>
            </li>
        </ul>

    </div>
</div>


