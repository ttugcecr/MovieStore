@model CartModel
@{
    ViewData["Title"] = "Index";
}




<h1 class="h3">Alışveriş Sepeti</h1>
<hr />
@if (Model.CartItems.Count == 0)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning">
                Sepetinizde Ürün Yok
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="text-left">
                <h4>Sepetteki Filimler  </h4>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Görsel</th>
                        <th>Filim Adı</th>
                        <th>Fiyat</th>
                        <th>Miktar</th>
                        <th>toplam</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <th><img src="~/img/@item.ImageUrl" width="80" height="80" alt="" /></th>
                            <th>@item.Name</th>
                            <th>@item.Price</th>
                            <th>@item.Quantity</th>
                            <th>@(item.Quantity * item.Price)</th>
                            <th>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="POST">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times fa-fw"></i>
                                    </button>
                                </form>
                            </th>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="text-left">
                <h4>Sepet Bilgisi </h4>
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Toplam Sepet Miktarı</th>
                            <td>@Model.TotalPrice().ToString("c")</td>

                        </tr>
                        <tr>
                            <th>İndirim</th>
                            <td>Uygulanmadı</td>
                        </tr>
                        <tr>
                            <th>Ödenecek Miktar</th>
                            <td>@Model.TotalPrice().ToString("c")</td>
                        </tr>
                    </tbody>
                </table>
                <div class="text-center">
                    <a href="/" class="btn btn-primary">
                        <i class="fa fa-arrow-circle-left fa-fw"></i>Alış Verişe Devam

                    </a>
                    <a href="/Cart/Checkout" class="btn btn-primary">
                        <i class="fa fa-arrow-circle-right fa-fw"></i>Ödeme Yap
                    </a>
                   
                </div>
            </div>
        </div>
    </div>
}     